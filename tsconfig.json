{
    "tsconfig": true,
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "removeComments": true,
        "sourceMap": true,
        "outDir": ".tmp/public/app"
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2,
        "newLineCharacter": "\r\n",
        "convertTabsToSpaces": true
    },
    "filesGlob": [
        "assets/**/*.ts",
        "!assets/**/*.d.ts"
    ],
    "files": [
        "assets/app/app.component.ts",
        "assets/app/main.ts",
        "assets/app/table-list.component.ts"
    ]
}